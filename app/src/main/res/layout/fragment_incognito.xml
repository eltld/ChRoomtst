<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/incognito_jm"
        android:id="@+id/ivIncognitoJm"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivIncognitoMj"
        android:src="@drawable/incognito_mj"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivIncognitoRand"
        android:src="@drawable/incognito_rnd"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ivIncognitoJm"
        android:layout_alignStart="@+id/ivIncognitoJm"
        android:layout_marginBottom="70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivIncognitoChat"
        android:src="@drawable/incognito_chat"
        android:layout_alignTop="@+id/ivIncognitoRand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="60dp"
        android:scaleType="fitCenter" />
</RelativeLayout>