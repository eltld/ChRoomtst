<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@color/white">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:textIsSelectable="false"
        android:background="@drawable/corners2"
        android:hint="Login"
        android:text="649490712815"
        android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/corners2"
        android:ems="10"
        android:id="@+id/pasText"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:hint="Password"
        android:text="5109019" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:id="@+id/logButton"
        android:background="@drawable/but_green"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_below="@+id/pasText"
        android:layout_alignRight="@+id/regButton"
        android:layout_alignEnd="@+id/regButton"
        android:layout_alignLeft="@+id/regButton"
        android:layout_alignStart="@+id/regButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Registration"
        android:id="@+id/regButton"
        android:background="@drawable/but_blue"
        android:textColor="@color/white"
        android:layout_below="@+id/logButton"
        android:layout_alignLeft="@+id/pasText"
        android:layout_alignStart="@+id/pasText"
        android:layout_alignRight="@+id/pasText"
        android:layout_alignEnd="@+id/pasText"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Логин:"
        android:id="@+id/textView4"
        android:layout_above="@+id/logText"
        android:layout_alignLeft="@+id/logText"
        android:layout_alignStart="@+id/logText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль:"
        android:id="@+id/textView5"
        android:layout_below="@+id/logText"
        android:layout_alignLeft="@+id/pasText"
        android:layout_alignStart="@+id/pasText"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Забыли пароль?"
        android:id="@+id/tvResetPassword"
        android:layout_below="@+id/regButton"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить пароль"
        android:id="@+id/checkBoxSavePass"
        android:layout_below="@+id/pasText"
        android:layout_alignLeft="@+id/pasText"
        android:layout_alignStart="@+id/pasText" />

</RelativeLayout>
