<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvChat3"
        android:layout_above="@+id/butSmile3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivGrad3"
        android:layout_above="@+id/smileTable3"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/white"
        android:src="@drawable/tmp2"
        android:scaleType="fitXY"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@+id/editText3" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button23"
        android:layout_above="@+id/smileTable3"
        android:visibility="visible"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/knopka200"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:padding="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/butSmile3"
            android:layout_toLeftOf="@+id/button23"
            android:layout_above="@+id/smileTable3"
            android:visibility="visible"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@+id/button23"
            android:background="@drawable/cornerstxt"
            android:minHeight="40dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:maxHeight="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=":)"
            android:id="@+id/butSmile3"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/smileTable3"
            android:visibility="visible"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/smile_circle"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:padding="5dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/smileTable3"
        android:visibility="gone"
        android:layout_alignParentBottom="true" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s031"
                android:src="@drawable/s01" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s032"
                android:src="@drawable/s02" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s033"
                android:src="@drawable/s03" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s034"
                android:src="@drawable/s04" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s035"
                android:src="@drawable/s05" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s036"
                android:src="@drawable/s06" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s037"
                android:src="@drawable/s07" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s038"
                android:src="@drawable/s08" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s039"
                android:src="@drawable/s09" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s030"
                android:src="@drawable/s10" />
        </TableRow>
    </TableLayout>

</RelativeLayout>