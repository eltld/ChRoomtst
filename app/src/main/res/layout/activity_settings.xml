<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/green"
        android:id="@+id/topRow">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/setBack"
            android:src="@drawable/back_left"
            android:background="@android:color/transparent" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:divider="@drawable/rect"
        android:showDividers="middle"
        android:weightSum="60"
        android:layout_weight="60"
        android:background="@color/white">

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приватность"
            android:id="@+id/tvPrivate"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кошелёк"
            android:id="@+id/tvWallet"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки чатов"
            android:id="@+id/tvChatSet"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цветовая схема"
            android:id="@+id/tvColor"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оценить"
            android:id="@+id/tvRate"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="О программе"
            android:id="@+id/tvAbout"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:background="@drawable/but_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выход"
            android:id="@+id/tvExit"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="10"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

</LinearLayout>