<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivResultPhoto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/camera128"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvResultName"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/ivResultPhoto"
        android:background="#AAAAAAAA"
        android:autoText="true"
        android:layout_alignRight="@+id/ivResultPhoto"
        android:layout_alignEnd="@+id/ivResultPhoto"
        android:layout_alignLeft="@+id/ivResultPhoto"
        android:layout_alignStart="@+id/ivResultPhoto" />
</RelativeLayout>