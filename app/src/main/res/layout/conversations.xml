<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id = "@+id/conversations_color"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/imgC2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/fromC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgC2"
        android:layout_toRightOf="@+id/imgC2"
        android:paddingLeft="5dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/messagC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromC2"
        android:layout_marginTop="2dip"
        android:paddingLeft="7dp"
        android:layout_toRightOf="@id/imgC2"
        android:gravity="left"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/timeC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#AAAAAA"
        android:layout_alignBaseline="@+id/fromC2"
        android:layout_alignBottom="@+id/fromC2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/onlineC2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/fromC2"
        android:layout_toRightOf="@+id/fromC2"
        android:layout_toEndOf="@+id/fromC2" />

</RelativeLayout>