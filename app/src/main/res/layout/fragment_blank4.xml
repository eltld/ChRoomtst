<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvChat4"
        android:layout_above="@+id/butSmile4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivGrad4"
        android:layout_above="@+id/smileTable4"
        android:layout_alignWithParentIfMissing="true"
        android:background="@color/white"
        android:src="@drawable/tmp"
        android:scaleType="fitXY"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@+id/editText4" />

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button24"
        android:visibility="visible"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/knopka200"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
        android:layout_above="@+id/smileTable4" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=":)"
        android:id="@+id/butSmile4"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:visibility="visible"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/smile_circle"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:layout_above="@+id/smileTable4" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/butSmile4"
            android:layout_toLeftOf="@+id/button24"
        android:visibility="visible"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@+id/button24"
            android:background="@drawable/cornerstxt"
            android:minHeight="50dp"
        android:layout_above="@+id/smileTable4"
        android:maxHeight="150dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/smileTable4"
        android:visibility="gone"
        android:layout_alignParentBottom="true" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s041"
                android:src="@drawable/s01" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s042"
                android:src="@drawable/s02" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s043"
                android:src="@drawable/s03" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s044"
                android:src="@drawable/s04" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s045"
                android:src="@drawable/s05" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s046"
                android:src="@drawable/s06" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s047"
                android:src="@drawable/s07" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s048"
                android:src="@drawable/s08" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s049"
                android:src="@drawable/s09" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s040"
                android:src="@drawable/s10" />
        </TableRow>
    </TableLayout>

</RelativeLayout>